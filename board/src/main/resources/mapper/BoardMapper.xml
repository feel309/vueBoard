<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.board.mapper.BoardMapper">

  <select id="findAll" resultType="com.study.board.model.Board">
  	SELECT * FROM board ORDER BY id DESC
  </select>
  <select id="findById" resultType="com.study.board.model.Board">
  	SELECT * FROM board WHERE id=#{id}
  </select>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.study.board.model.Board">
    INSERT INTO board(title, content, writer, created_at)
    VALUES(#{title}, #{content}, #{writer}, NOW())
  </insert>
  <update id="update" parameterType="com.study.board.model.Board">
    UPDATE board SET title=#{title}, content=#{content}, writer=#{writer} WHERE id=#{id}
  </update>
  <delete id="delete" parameterType="com.study.board.model.Board">
  	DELETE FROM board WHERE id=#{id}
  </delete>

</mapper>